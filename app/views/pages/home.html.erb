<div id="home-wrapper">

  <div id="product-images">
    <%= image_tag 'plr_cover-image.png', id: 'main-image' %>
    <%= image_tag 'plr_portrait-image.png', id: 'portrait-image' %>
  </div>

  <div id="product-details">

    <div id="content-details">
      <h1>deux mille dix neuf</h1>
      <h3>par cdlt, bisou.</h3>
      <h4><%= @calendar.name %></h4>

      <div class="product-description">
        <p><%= simple_format @calendar.description %></p>
        <p><%= humanized_money_with_symbol(@calendar.price) %></p>
      </div>

      <%= form_tag orders_path do %>
        <%= hidden_field_tag 'calendar_id', @calendar.id %>
        <%= text_field_tag :user_email, nil, placeholder: "adresse email" %>
        <button class="button">pr√© commander</button>
      <% end %>

    </div>

  </div> <!-- end of #product-details -->

